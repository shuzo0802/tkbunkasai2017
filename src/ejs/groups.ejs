<% var pageName = "団体紹介" %>
<%- include("components/_header.ejs",{pageName:pageName}) %>
<%- include("components/_menu.ejs",{pageId:"groups"}) %>
<main id="main" class="main-groups">
	<h1 class="parlevel1-headline"><span><%= pageName %></span></h1>
	<div class="parlevel1-content">
		<div class="deco-search-box">
			<input type="text" class="deco-search-box__input" placeholder="団体名で検索">
			<div class="deco-search-result">
				<ul class="deco-search-result__list">					
					<%
						var decoList = jsonData[0].decoDeta;
						decoList.forEach(function(deco,num){
					%>
					<li class="deco-list__item" data-deco-num="<%= num %>">
						<div class="deco-name"><%= deco.decoName %></div>
						<div class="deco-title"><%= deco.decoTitle %></div>
						<span class="search-word" style="display:none;">
							<% for(var i=0; i < deco.searchWord.length; i++){ %>
								<%= deco.searchWord[i] %>
							<% } %>
						</span>
					</li>
					<% }); %>
				</ul>
				<p class='serach-word-too-short'>検索ワードが短すぎます。</p>
				<p class='not-found'>検索ワードに当てはまる団体はありませんでした。</p>
			</div>
		</div>
		<div class="deco-list-wrap">
			<%
				var decoList = jsonData[0].decoDeta;
				decoList.forEach(function(deco,num){
			%>
			<% if(num == 0){%><div class="deco-list"><h2 class="parlevel2-headline-single groups-headline">展示</h2><div class="groups-headline-trigger"  data-deco-list-trigger-num="1"><i class="fa fa-chevron-down" aria-hidden="true"></i></div><ul data-deco-list-num="1"><%}%>
			<% if(num == 17){%></ul></div><div class="deco-list"><h2 class="parlevel2-headline-single groups-headline">演劇</h2><div class="groups-headline-trigger" data-deco-list-trigger-num="2"><i class="fa fa-chevron-down" aria-hidden="true"></i></div><ul data-deco-list-num="2"><%}%>
			<% if(num == 28){%></ul></div><div class="deco-list"><h2 class="parlevel2-headline-single groups-headline">パフォーマンス・その他</h2><div class="groups-headline-trigger" data-deco-list-trigger-num="3"><i class="fa fa-chevron-down" aria-hidden="true"></i></div><ul data-deco-list-num="3"><%}%>
			<li class="deco-list__item" data-deco-num="<%= num %>">
				<img class="deco-img" src="http://placehold.jp/150x150.png"/>
				<div class="deco-name"><%= deco.decoName %></div>
				<div class="deco-title"><%= deco.decoTitle %></div>
				<span class="search-word" style="display:none;"><% for(var i=0; i < deco.searchWord.length; i++){ %><%= deco.searchWord[i] %>&nbsp;<% } %></span>
			</li>
			<% }); %>
			</ul>
		</div>
	</div>
</main>
<%- include("components/_footer.ejs") %>
